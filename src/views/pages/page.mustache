{{>partials/header}}
<link rel="stylesheet" href="/style.css" />

{{#banner}}
<section class="banner" style="background-image: url('/images/{{ background }}')">
  <h1>{{ title }}</h1>
  <p>{{ subtitle }}</p>
</section>
<h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">
  {{#list}}
  <div class="item">
    <div class="item-inner">
      <img src="/images/{{ image }}" alt="{{ name }}" class="item--image" />
      <div class="item-info">
        <div class="item--name">{{ name }}</div>
        <div class="item--color">Cor: {{ color }}</div>
        <div class="item--genre">Gênero: {{ sex }}</div>
        <div class="item--characteristics">Características: {{ characteristics }}</div>
        <div class="item--size">Peso: {{ sizeInfo.weightRange }}</div>
        <div class="item--size">Altura: {{ sizeInfo.heightRange }}</div>
        <div class="item--life-expectancy">Expectativa de vida: {{ sizeInfo.lifeExpectancy }}</div>
        <div class="item--feeding-frequency">Alimentação: {{ careInfo.feedingFrequency }}</div>
      </div>
    </div>
  </div>
  {{/list}}
</div>

{{^list}}
  <div class="container no-list">
    <h2>Não há animais disponíveis no momento nestas condições.</h2>
  </div>
{{/list}}

{{>partials/footer}}

<style>
  :root {
    --primary-color: #4CAF50;
    --secondary-color: #2196F3;
    --background-color: #f5f5f5;
    --card-background: #ffffff;
    --text-color: #333333;
    --border-color: #ddd;
    --shadow-color: rgba(0, 0, 0, 0.1);
    --card-width: 220px;
    --card-height: 320px;
    --banner-height: 300px;
  }

  /* Reset e estilos base */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: var(--background-color);
    color: var(--text-color);
    line-height: 1.5;
  }

  /* Banner */
  .banner {
    height: var(--banner-height);
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #fff;
    padding: 20px;
    text-align: center;
  }

  .banner h1 {
    font-size: 1.5em;
    margin-bottom: 10px;
  }

  .banner p {
    font-size: 1.2em;
  }

  /* Container principal */
  .container.list {
    max-width: 1400px;
    margin: 0 auto;
    padding: 15px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(var(--card-width), 1fr));
    gap: 20px;
    justify-content: center;
  }

  /* Cards dos pets */
  .item {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 1000px; /* Criando o efeito 3D */
  }

  .item-inner {
    width: 100%;
    height: 100%;
    background-color: var(--card-background);
    border-radius: 12px;
    box-shadow: 0 3px 10px var(--shadow-color);
    transition: transform 0.4s ease-in-out;
    position: relative;
    overflow: hidden;
  }

  .item:hover .item-inner {
    transform: rotateY(15deg); /* Adicionando a rotação 3D no hover */
  }

  .item--image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 10px;
    transition: transform 0.3s ease;
  }

  .item-inner:hover .item--image {
    transform: scale(1.1); /* Zoom da imagem */
  }

  .item-info {
    padding: 15px;
  }

  .item--name {
    font-size: 1.2em;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 10px;
  }

  .item--color,
  .item--genre,
  .item--characteristics,
  .item--size,
  .item--life-expectancy,
  .item--feeding-frequency {
    font-size: 0.9em;
    color: #444;
    margin-bottom: 6px;
  }

  /* Responsividade */
  @media (max-width: 768px) {
    :root {
      --card-width: 200px;
      --card-height: 300px;
      --banner-height: 250px;
    }

    .container.list {
      padding: 10px;
      gap: 15px;
    }

    .banner {
      height: var(--banner-height);
    }
  }

  @media (max-width: 480px) {
    :root {
      --card-width: 180px;
      --card-height: 280px;
      --banner-height: 200px;
    }

    .item--image {
      height: 160px;
    }

    .item--name {
      font-size: 1.1em;
    }

    .banner h1 {
      font-size: 1em;
    }

    .banner p {
      font-size: 1em;
    }
  }
</style>
